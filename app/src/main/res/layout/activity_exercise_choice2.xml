<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ExerciseChoiceAdapter">

    <ImageButton
        android:id="@+id/ibExercise2"
        android:scaleType="centerCrop"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintEnd_toStartOf="@+id/tvExerciseName2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/square"

        />

    <TextView
        android:id="@+id/tvExerciseName2"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:text="TextView"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ibExercise2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSetsDone"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:text="Sets Done: 0"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ibExercise2"
        app:layout_constraintTop_toBottomOf="@+id/tvExerciseName2" />
</androidx.constraintlayout.widget.ConstraintLayout>